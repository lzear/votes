{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es7", "es2015", "es2016", "es2017", "es2019", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types"],
    "preserveConstEnums": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "types": ["node", "jest"],
  "include": ["src"]
}
